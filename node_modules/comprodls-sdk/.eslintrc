
{
    "env": {
    "node": true
    },
    "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    
    "ecmaFeatures": {
    "jsx": true
    }
    },
    "rules": {
    "block-scoped-var": 2,
    "curly": 2,
    "eol-last": 2,
    "eqeqeq": [2, "smart"],
    "new-cap": 1,
    "no-extend-native": 2,
    "no-mixed-spaces-and-tabs": 2,
    "no-trailing-spaces": 2,
    "no-undef": 2,
    "no-use-before-define": [2, "nofunc"],
    "no-unused-vars": 1,
    "quotes": [2, "single", "avoid-escape"],
    "semi": [2, "always"]
    }
    }